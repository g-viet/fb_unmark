{
  "manifest_version": 2,
  "name": "FB Unmark",
  "description": "FB Unmark",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Click to enable FB unmark feature!"
  },
  "background": {
    "scripts": ["block.js"]
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://*.facebook.com/*",
    "*://*.messenger.com/*"
  ]
}